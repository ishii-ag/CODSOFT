import java.util.Scanner;

public class Task1 {
    public static void main(String[] args) {
        Scanner in= new Scanner(System.in);
        String choice;
        do{
        int numOfGuesses=0;
        int maxAttempts=5;
        int guess=0;
        int randomNum= (int)(Math.random()*100);

        System.out.println("THIE IS A NUMBER GAME!");
        System.out.println("Rules:" + "\n"+ "1. You have to guess the random number generated by the computer");
    System.out.println("2. The total number of attempts given are"+maxAttempts+".");
    
while (guess!= randomNum && numOfGuesses < maxAttempts) {
    System.out.println("Enter your guess");
    guess= in.nextInt();
    numOfGuesses++;

if(guess>randomNum){
    System.out.println("Too high.");
}
else if (guess<randomNum) {
    System.out.println("Too low.");
}
else{
    System.out.println("Congratulations! You have guessed the correct number");
}
}
if(guess!=randomNum){
    System.out.println("Oops you have ran out of attempts."+ "\n" + "The correct number was: "+randomNum);
}
in.nextLine();
System.out.print("Enter 1 to play again (y/n):");
choice= in.next();
    } while (choice.equalsIgnoreCase("y"));
    in.close();
    }
}



